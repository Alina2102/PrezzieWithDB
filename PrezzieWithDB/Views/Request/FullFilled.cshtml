@model PrezzieWithDB.Models.Customer

@{
    ViewBag.Title = "FullFilled";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>FullFilled</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Rating for User @Model.userName</h4>
    <hr />
    <p>
        <table style="border:hidden">
            <tr>
                <td>
                    <input type="radio" name="stars" value="1" checked>
                    <label>bad</label>
                </td>
                <td style="padding-left:1em">
                    ☆
                </td>
            </tr>
            <tr>
                <td>
                    <input type="radio" name="stars" value="2">
                    <label>poor</label>
                </td>
                <td style="padding-left:1em">
                    ☆☆
                </td>
            </tr>
            <tr>
                <td>
                    <input type="radio" name="stars" value="3">
                    <label>okay</label>
                </td>
                <td style="padding-left:1em">
                    ☆☆☆
                </td>
            </tr>
            <tr>
                <td>
                    <input type="radio" name="stars" value="4">
                    <label>good</label>
                </td>
                <td style="padding-left:1em">
                    ☆☆☆☆
                </td>
            </tr>
            <tr>
                <td>
                    <input type="radio" name="stars" value="5">
                    <label>super</label>
                </td>
                <td style="padding-left:1em">
                    ☆☆☆☆☆
                </td>
            </tr>
        </table>
    </p>
         <div class="form-group">
             <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Rate!" class="btn btn-default" style="background-color:#feab33" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to my requests", "MyOwnRequests")
</div>
