            </div>
        </div>
        @if (Model.status == "in progress")
        {
            <div class="form-group">
                <b class="control-label col-md-2">Status</b>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.status, new SelectList(new List<Object> { "in progress", "done" }), new { @class = "form-control" })
                    @if (ViewBag.ErrorMessageStatus != null)
                    {
                        <p style="color:firebrick">@ViewBag.ErrorMessageStatus</p>
                    }
                </div>
            </div>
        }
        @if (Model.status != "in progress")
        {
            <div class="form-group">
                <b class="control-label col-md-2">Status</b>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.status, new SelectList(new List<Object> { "new", "done" }), new { @class = "form-control" })
                    @if (ViewBag.ErrorMessageStatus != null)
                    {
                        <p style="color:firebrick">@ViewBag.ErrorMessageStatus</p>
                    }
                </div>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" style="background-color:#feab33; margin-bottom:3em" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to my requests", "MyOwnRequests")
</div>

@section Scripts {
    <script type="text/javascript">

    $(function () {

        $("#@Html.IdFor(s => s.amount)")
            .on("input", function () {

            if ($(this).val() < 1 || $(this).val() > 100) {
                alert("Cannot be less than 1 or more than 100");
                $(this).val("");
            }
        });

    });

    </script>
}
