@model PrezzieWithDB.Models.Customer

@{
    ViewBag.Title = "changePicture";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change profile picture</h2>
@using (Html.BeginForm("changePicture", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group" style="margin-top:2em">
        <b> class="control-label col-md-2">Upload a profile picture</b>
        <div class="col-md-10">
            <input type="file" name="file" id="file">
        </div>
    </div>

    <div class="col-md-offset-2 col-md-10">
        <p>For optimal resolution please select a square image!</p>
    </div>

    <div class="form-group" style="margin-bottom:1em">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="change" class="btn btn-default" style="background-color:#feab33" />
        </div>
    </div>
}
<img src="@Url.Content(Model.selectedPictureCustomer)" alt="Here should be a photo" style="width:300px; height:300px; margin-top:4em" />
    <div style="margin-top:2em">
    <a href='@Url.Action("DeletePicture", "Customer")' class="btn btn-default" style="background-color:firebrick">Delete Picture</a>
    </div>
    <div style="margin-top:2em">
        @Html.ActionLink("Back to Profile", "Index")
    </div>

