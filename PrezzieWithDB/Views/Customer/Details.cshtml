@model PrezzieWithDB.ViewModels.CustomerView

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

            <h2>Profile</h2>

<hr />

<div class="row" style="background-color:#eeeeee; border-radius:40px; margin-right:-1em" align="center">


    <div class="col-md-6" style="margin-top:7em; margin-bottom:3em" align="left">
        <dl class="dl-horizontal">

            <dt style="color:#56c8c8">
                E-Mail:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.eMail)
            </dd>

            <dt style="margin-top:1em; color:#56c8c8">
                First name:
            </dt>

            <dd style="margin-top:1em">
                @Html.DisplayFor(model => model.firstName)
            </dd>

            <dt style="margin-top:1em; color:#56c8c8">
                Surname:
            </dt>

            <dd style="margin-top:1em">
                @Html.DisplayFor(model => model.surname)
            </dd>

            <dt style="margin-top:1em; color:#56c8c8">
                Country:
            </dt>

            <dd style="margin-top:1em">
                @Html.DisplayFor(model => model.countryUser)
            </dd>

            <dt style="margin-top:1em; color:#56c8c8">
                Birthday:
            </dt>

            <dd style="margin-top:1em">
                @Html.DisplayFor(model => model.birthday)
            </dd>

            <dt style="margin-top:1em; color:#56c8c8">
                Description:
            </dt>

            <dd style="margin-top:1em">
                @Html.DisplayFor(model => model.descriptionUser)
            </dd>

            @if (Model.ratingCount > 0)
            {
                <dt style="margin-top:1em; color:#56c8c8">
                    Rating:
                </dt>

                <dd style="margin-top:1em">
                    @Html.DisplayFor(model => model.rating) ☆ - @Html.DisplayFor(model => model.ratingDescription) (@Html.DisplayFor(model => model.ratingCount) ratings)
                </dd>
            }

            @if (Model.ratingCount == 0)
            {
                <dt style="margin-top:1em; color:#56c8c8">
                    Rating:
                </dt>

                <dd style="margin-top:1em">
                    no ratings yet
                </dd>
            }


        </dl>
    </div>

    <div class="col-md-6" style="margin-top:-2em">

        <img src="@Url.Content(Model.selectedPictureCustomer)" alt="Here should be a photo" style="width:300px; height:300px; margin-top:4em" />
        <h2 style="color:#56c8c8; margin-bottom:1em">@Html.DisplayFor(model => model.userName)</h2>
    </div>

    <a class="btn btn-default" style="background-color:#56c8c8; margin-bottom:3em" @Html.ActionLink("Edit your profile", "Edit", new { id = Model.userName })
    <a class="btn btn-default" style="margin-bottom:3em" @Html.ActionLink("Change profile picture", "changePicture", Model )
    <a class="btn btn-default" style="margin-bottom:3em" @Html.ActionLink("Change password", "ChangePassword", Model )

</div>

